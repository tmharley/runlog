<% provide(:title, 'View shoe') %>

<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1><%= @shoe.manufacturer %> <%= @shoe.model %></h1>
</div>

<div class="panel panel-info">
  <div class="panel-heading">Details</div>
  <div class="panel-body container">
    <div class="row">
      <div class="col-md-4">
        <h3>Manufacturer</h3>
        <p class="details">
          <%= @shoe.manufacturer %>
        </p>
      </div>
      <div class="col-md-4">
        <h3>Model</h3>
        <p class="details">
          <%= @shoe.model %>
        </p>
      </div>
      <div class="col-md-4">
        <h3>Size</h3>
        <p class="details">
          <%= shoe_size_clean(@shoe.size) %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">Colors</div>
  <div class="panel-body container">
    <div class="row">
      <div class="col-md-3">
        <p class="details" style="background: #<%= @shoe.color_primary %>">
          #<%= @shoe.color_primary %>
        </p>
      </div>
      <div class="col-md-3">
        <p class="details" style="background: #<%= @shoe.color_secondary %>">
          #<%= @shoe.color_secondary %>
        </p>
      </div>
      <div class="col-md-3">
        <p class="details" style="background: #<%= @shoe.color_tertiary %>">
          #<%= @shoe.color_tertiary %>
        </p>
      </div>
    </div>
  </div>
</div>

<div class="btn-toolbar" role="toolbar">
  <div class="btn-group">
    <%= link_to 'All Shoes', shoes_path, class: "btn btn-info" %>
  </div>
  <div class="btn-group">
    <%= link_to 'New Shoe', new_shoe_path, class: "btn btn-success" %>
  </div>
  <div class="btn-group">
    <%= link_to 'Edit', edit_shoe_path(@shoe), class: "btn btn-warning" %>
    <%= link_to 'Delete', @shoe, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger" %>
  </div>
</div>
