= form_for(shoe) do |f|
  - if shoe.errors.any?
    #error_explanation
      %h2 #{pluralize(shoe.errors.count, 'error')} prohibited this shoe from being saved:
      %ul
        - shoe.errors.full_messages.each do |msg|
          %li=msg
  .form-group.row
    = f.label :manufacturer, 'Manufacturer', class: 'col-sm-3'
    .col-sm-3
      = f.text_field :manufacturer, class: 'form-control'
  .form-group.row
    = f.label :model, 'Model', class: 'col-sm-3'
    .col-sm-3
      = f.text_field :model, class: 'form-control'
  .form-group.row
    = f.label :size, 'Size', class: 'col-sm-3'
    .col-sm-3
      = f.number_field :size, step: 0.5, in: 1..20, class: 'form-control'
  .form-group.row
    = f.label :color_primary, 'Color 1', class: 'col-sm-3'
    .col-sm-3
      .input-group
        .input-group-prepend
          %span.input-group-text #
        = f.text_field :color_primary, maxlength: 6, class: 'form-control'
  .form-group.row
    = f.label :color_secondary, 'Color 2', class: 'col-sm-3'
    .col-sm-3
      .input-group
        .input-group-prepend
          %span.input-group-text #
        = f.text_field :color_secondary, maxlength: 6, class: 'form-control'
  .form-group.row
    = f.label :color_tertiary, 'Color 3', class: 'col-sm-3'
    .col-sm-3
      .input-group
        .input-group-prepend
          %span.input-group-text #
        = f.text_field :color_tertiary, maxlength: 6, class: 'form-control'
  .form-group.row
    .col-sm-6
      = submit_tag button_title, class: 'btn btn-primary'