- provide(:title, 'Search runs')
- date = Time.now.strftime('%Y-%m-%d')

%h1
  Search runs
= form_tag({controller: 'runs', action: 'index'}, method: 'get') do
  .form-group.row
    = label_tag :start_date, 'Start date', class: 'col-sm-3'
    .col-sm-4.col-md-3
      .input-group.date#start-date{'data-target-input': 'nearest'}
        = text_field_tag :start_date, nil, id: 'start-date', class: 'form-control datetimepicker-input', 'data-target': '#start-date'
        .input-group-append{data: {target: '#start-date', toggle: 'datetimepicker'}}
          .input-group-text
            %i.fa.fa-calendar
  .form-group.row
    = label_tag :end_date, 'End date', class: 'col-sm-3'
    .col-sm-4.col-md-3
      .input-group.date#end-date{'data-target-input': 'nearest'}
        = text_field_tag :end_date, nil, id: 'end-date', class: 'form-control datetimepicker-input', 'data-target': '#end-date'
        .input-group-append{data: {target: '#end-date', toggle: 'datetimepicker'}}
          .input-group-text
            %i.fa.fa-calendar
  .form-group.row
    .col-sm-3
    .col-sm-6
      = submit_tag 'Search', class: 'btn btn-primary'