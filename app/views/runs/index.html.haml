- page_title = build_page_title(params)
- provide(:title, page_title)

.col-xs-12
  %h1=page_title
  .text-center=will_paginate
  .panel.panel-default
    .panel-heading=page_entries_info
    %table.table.table-hover.runs
      %thead
        %tr
          %th Start time
          %th Distance
          %th Duration
          %th Pace
          %th Weather
          %th Climb
          %th Notes
      = render @runs
  .text-center=will_paginate
  = link_to 'New Run', new_run_path, class: 'btn btn-large btn-success'

  %h2 Safe training mileage outlook
  - (0...28).each do |d|
    .col-xs-3
      #{(Time.now + d.days).strftime('%a %-m/%-d')}:
      = '%.2f' % Run.safe_mileage(Time.now + d.days)