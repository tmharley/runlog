- page_title = build_page_title(params)
- provide(:title, page_title)

.col-12
  %h1=page_title
  .text-center
    = will_paginate(@runs, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer)
  .card
    .card-header=page_entries_info
    %table.table.table-hover.runs
      %thead
        %tr
          %th Start time
          %th Distance
          %th Duration
          %th Pace
          %th Weather
          %th Climb
          %th Notes
      = render @runs
  .text-center
    = will_paginate(@runs, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer)
  = link_to 'New Run', new_run_path, class: 'btn btn-large btn-success'

  %h2 Safe training mileage outlook
  .row
    - (0...4).each do |w|
      .col-3
        - (0...7).each do |d|
          .row
            .col
              #{(Time.now + w.weeks + d.days).strftime('%a %-m/%-d')}:
              = '%.2f' % Run.safe_mileage(Time.now + w.weeks + d.days)