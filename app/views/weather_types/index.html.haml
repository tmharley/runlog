- provide(:title, 'Weather types')
.row
  .col-12
    %h1 Weather statistics
    .card
      .card-header
        Temperatures
      .card-body
        - @temp_counts.each do |temp, count|
          = render 'shared/graph_bar', bar_height: count,
                                      tooltip: pluralize(count, 'run'),
                                      label_category: temp,
                                      label_amount: count
    .text-center
      =will_paginate(@runs, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer)
    .card
      .card-header=page_entries_info
      %table.table.table-hover
        %thead
          %tr
            %th Name
            %th Precipitation?
            %th Day icon
            %th Night icon
            %th Number of runs
        %tbody
          = render @weather_types
          %tr
            %td.text-center (not specified)
            %td
            %td
            %td
            %td.text-center=Run.where(weather_type_id: nil).size
    .text-center
      =will_paginate(@runs, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer)
    = link_to 'New Weather Type', new_weather_type_path, class: 'btn btn-large btn-success'