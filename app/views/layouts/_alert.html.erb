<div id="alerts" class="col-xs-12">
	<% %w(success info warning danger).each do |type| %>
		<% if flash[type] %>
		  <div class="alert alert-<%= type %> alert-dismissible" role="alert">
		    <button type="button" class="close" data-dismiss="alert">&times;</button>
		    <%= flash[type] %>
		  </div>
		<% end %>
	<% end %>
</div>